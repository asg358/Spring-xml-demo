<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actorRef" class="com.stackroute.domain.Actor" >
        <constructor-arg name="name" value="Abhinav" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="25"/>
    </bean>

    <bean id="movie" class="com.stackroute.domain.Movie" >
      <constructor-arg name="actor" ref="actorRef" />
    </bean>

    <bean id="movieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actorRef" />
    </bean>

</beans>