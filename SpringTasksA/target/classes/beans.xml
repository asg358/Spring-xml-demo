<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actorRef1" class="com.stackroute.domain.Actor" >
        <constructor-arg name="name" value="Abhinav" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="25"/>
    </bean>

    <bean id="actorRef2" class="com.stackroute.domain.Actor" >
        <constructor-arg type="java.lang.String" value="Rahul" />
        <constructor-arg type="java.lang.String" value="Male" />
        <constructor-arg type="int" value="24"/>
    </bean>

    <bean id="actorRef3" class="com.stackroute.domain.Actor" >
        <constructor-arg index="0" value="Abhi" />
        <constructor-arg index="1" value="Male" />
        <constructor-arg index="2" value="26"/>
    </bean>

    <bean id="movie" class="com.stackroute.domain.Movie" >
        <constructor-arg name="actor1" ref="actorRef1" />
        <constructor-arg name="actor2" ref="actorRef2" />
        <constructor-arg name="actor3" ref="actorRef3" />
    </bean>

    <bean name="movieA,movieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor1" ref="actorRef1" />
        <constructor-arg name="actor2" ref="actorRef2" />
        <constructor-arg name="actor3" ref="actorRef3" />
    </bean>

</beans>