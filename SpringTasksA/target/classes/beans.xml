<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor" >
        <constructor-arg name="name" value="Abhinav" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="25"/>
    </bean>

    <bean id="movie" class="com.stackroute.domain.Movie" autowire="byName" ></bean>

    <bean class="com.stackroute.demo.BeanPostProcessorDemoBean"/>


</beans>